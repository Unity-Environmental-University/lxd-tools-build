{
  "manifest_version": 3,
  "name": "LXD Browser Extension REACT version",
  "description": "Shortcuts including search by code.",
  "version": "0.1",
  "action": {
    "default_title" : "LDX Tools LDX"
  },
 "commands" : {
      "_execute_action": {
          "suggested_key": "Shift+Alt+F",
          "mac": "Shift+Option+F"
      }
  },
  "background" : {
      "service_worker": "js/background.js",
      "type" : "module"
  },
  "web_accessible_resources": [{
     "matches": ["<all_urls>"],
     "resources": ["js/canvas.js"]
   }],
  "content_scripts" : [
    {
      "matches" : ["*://*.instructure.com/courses/**"],
      "js" : ["js/pageFixes.js"],
      "run_at" : "document_end"
    },
    {
      "matches" : ["*://*.instructure.com/courses/*/modules"],
      "js" : ["js/ui/module.js"],
      "run_at" : "document_end"
    },
    {
      "matches" : ["*://*.instructure.com/courses/**"],
      "js" : ["js/ui/course.js"],
      "run_at" : "document_end"
    },
    {
      "matches" : ["*://*.instructure.com/accounts/*"],
      "js" : ["js/ui/account.js"],
      "run_at" : "document_end"
    }
  ],
  "permissions" : ["activeTab", "scripting", "storage", "download"]
}